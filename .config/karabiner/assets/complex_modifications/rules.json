{
  "title": "Juhyeong's frequently used rules",
  "rules": [
    {
      "description": "Fn + c => Ctrl + c",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Fn + s => Cmd + s",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "key_code": "s",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ctrl + s => Cmd + s",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "s",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "Fn + t opens iTerm on Desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to": [
            {
              "shell_command": "open -a iterm ~/Desktop"
            }
          ]
        }
      ]
    },
    {
      "description": "Won(â‚©) => grave accent (`) when layout is Korean",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ko"
                }
              ]
            }
          ],
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Command + Shift + v => Cmd + Opt + Shift + v (paste without formatting)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": ["command", "shift"]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["left_command", "left_option", "left_shift"]
            }
          ]
        }
      ]
    }
  ]
}
